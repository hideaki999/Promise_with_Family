<h1 class="app_title_sign_up">promise with family</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password,{class: 'sign_up_password'} %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上にてください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation ,{class: 'sign_up_password_confirmation'}%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%# <%= f.check_box :name, {}, checked_value = "true",unchecked_value = "false" %>
    <%= f.label :family_name ,{class: 'sign_up_family_name'}%><br />
    <%= f.password_field :family_name, autocomplete: "family-name" %>
  </div>

  <div class="field">
    <%= f.label :family_name2 ,{class: 'sign_up_family_name2'}%><br />
    <%= f.password_field :family_name2, autocomplete: "family-name" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
