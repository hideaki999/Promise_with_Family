<h1 class="app_title_sign_up">promise with family</h1>

<%= form_for(@family,url: family_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: @family %>

  <div class="field">
    <%= f.select :relationships_id, [["妻", 1], ["夫", 2], ["息子", 3], ["娘", 4],["おじいちゃん", 5],["おばあちゃん", 6]], include_blank: "選択して下さい" %>
    <%= f.label :name ,{class: 'sign_up_family_name'}%><br />
    <%= f.text_field :name, autocomplete: "family-name" %>
  </div>

  <div class="field">
    <%= f.select :relationships_id, [["妻", 1], ["夫", 2], ["息子", 3], ["娘", 4],["おじいちゃん", 5],["おばあちゃん", 6]], include_blank: "選択して下さい" %>
    <%= f.label :name2 ,{class: 'sign_up_family_name2'}%><br />
    <%= f.text_field :name2, autocomplete: "family-name" %>
  </div>

  <div class="field">
    <%= f.select :relationships_id, [["妻", 1], ["夫", 2], ["息子", 3], ["娘", 4],["おじいちゃん", 5],["おばあちゃん", 6]], include_blank: "選択して下さい" %>
    <%= f.label :name3 ,{class: 'sign_up_family_name3'}%><br />
    <%= f.text_field :name3, autocomplete: "family-name" %>
  </div>



  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
